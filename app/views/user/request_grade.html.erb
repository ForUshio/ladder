<script src="//g.alicdn.com/dingding/open-develop/0.8.4/dingtalk.js" type="text/javascript" charset="utf-8"></script>
<%= stylesheet_link_tag params[:controller] + '/' + params[:action], media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag params[:controller] + '/' + params[:action], 'data-turbolinks-track': 'reload' %>
<form role="form" class="only-form">
  <div class="form-group">
    <label class="control-label">任务名称</label>
    <input class="form-control" type="text" name="name" placeholder="请输入任务名称（必填）">
  </div>
  <div class="form-group">
    <label class="control-label">任务基本分</label>
    <input class="form-control" type="number" name="grade" placeholder="请输入任务基本分（必填）">
  </div>
  <div class="form-group">
    <label class="control-label">完成情况</label>
    <textarea class="form-control" name="description" placeholder="请简要介绍完成情况（必填）" rows="4"></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">提交</button>
</form>